@model ByArabianEye.Models.Booking

<div class="container my-5">
    <h2 class="text-center mb-4 fw-bold">🔍 تفاصيل الحجز | Booking Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Client Name</dt>
                <dd class="col-sm-9">@Model.ClientName</dd>

                <dt class="col-sm-3">Country</dt>
                <dd class="col-sm-9">@Model.Country</dd>

                <dt class="col-sm-3">Hotel</dt>
                <dd class="col-sm-9">@Model.Hotel</dd>

                <dt class="col-sm-3">Package Type</dt>
                <dd class="col-sm-9">@Model.PackageType</dd>

                <dt class="col-sm-3">Booking Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">People Count</dt>
                <dd class="col-sm-9">@Model.PeopleCount</dd>

                <dt class="col-sm-3">Contact Number</dt>
                <dd class="col-sm-9">@Model.ContactNumber</dd>


                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9"><span class="badge bg-success">@Model.Status</span></dd>
            </dl>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-outline-primary">⬅️ Back to List</a>
            </div>
        </div>
    </div>
</div>
