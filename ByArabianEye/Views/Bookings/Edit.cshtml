@model ByArabianEye.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<div class="container my-5">
    <h2 class="text-center mb-4 fw-bold">✏️ تعديل الحجز | Edit Booking</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">اسم العميل / Client Name</label>
            <input asp-for="ClientName" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">الدولة / Country</label>
            <select asp-for="Country" class="form-select">
                <option value="Azerbaijan">Azerbaijan</option>
                <option value="Georgia">Georgia</option>
                <option value="Russia">Russia</option>
                <option value="Albania">Albania</option>
                <option value="Kazakhstan">Kazakhstan</option>
                <option value="Uzbekistan">Uzbekistan</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">نوع الباقة / Package Type</label>
            <select asp-for="PackageType" class="form-select">
                <option value="Family Package">Family Package</option>
                <option value="Youth Package">Youth Package</option>
                <option value="Couple Package">Couple Package</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">تاريخ الحجز / Booking Date</label>
            <input asp-for="Date" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">عدد الأشخاص / People</label>
            <input asp-for="PeopleCount" type="number" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">الحالة / Status</label>
            <select asp-for="Status" class="form-select">
                <option value="Confirmed">Confirmed</option>
                <option value="Pending">Pending</option>
                <option value="Cancelled">Cancelled</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success w-100">💾 حفظ التعديلات | Save Changes</button>
    </form>
</div>
