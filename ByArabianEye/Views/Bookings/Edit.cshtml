@model ByArabianEye.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<div class="container my-5" style="max-width: 700px;">
    <h2 class="text-center mb-4 fw-bold">✏️ تعديل الحجز | Edit Booking</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            يرجى تصحيح الحقول قبل المتابعة.
        </div>
    }

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">👤 اسم العميل | Client Name</label>
            <input asp-for="ClientName" class="form-control" />
            <span asp-validation-for="ClientName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">🌍 الدولة | Country</label>
            <select asp-for="Country" class="form-select">
                <option value="">اختر الدولة</option>
                <option>Azerbaijan</option>
                <option>Georgia</option>
                <option>Russia</option>
                <option>Albania</option>
                <option>Kazakhstan</option>
                <option>Uzbekistan</option>
            </select>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">🏨 الفندق | Hotel</label>
            <input asp-for="Hotel" class="form-control" />
            <span asp-validation-for="Hotel" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">📦 نوع الباقة | Package Type</label>
            <select asp-for="PackageType" class="form-select">
                <option value="">اختر الباقة</option>
                <option>Family Package</option>
                <option>Youth Package</option>
                <option>Couple Package</option>
            </select>
            <span asp-validation-for="PackageType" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">📅 تاريخ الحجز | Booking Date</label>
            <input asp-for="Date" type="date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">👥 عدد الأشخاص | People Count</label>
            <input asp-for="PeopleCount" type="number" class="form-control" min="1" />
            <span asp-validation-for="PeopleCount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ContactNumber" class="form-label">📞 Contact Number</label>
            <input asp-for="ContactNumber" class="form-control" />
            <span asp-validation-for="ContactNumber" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label class="form-label">🟡 الحالة | Status</label>
            <select asp-for="Status" class="form-select">
                <option>Pending</option>
                <option>Confirmed</option>
                <option>Cancelled</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-success w-100">💾 حفظ التعديلات | Save Changes</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
