@model ByArabianEye.Models.Customer

@{
    ViewData["Title"] = "Add New Client";
}

<div class="container mt-4">
    <h2 class="text-info mb-4">➕ Add New Client</h2>

    <form asp-action="Create" method="post" class="row g-3 bg-light text-dark p-4 rounded shadow">

        <!-- ✅ عرض كل الأخطاء -->
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="col-md-6">
            <label asp-for="ClientCode" class="form-label">Client Code</label>
            <input asp-for="ClientCode" class="form-control" />
            <span asp-validation-for="ClientCode" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ClientName" class="form-label">Client Name</label>
            <input asp-for="ClientName" class="form-control" />
            <span asp-validation-for="ClientName" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Country" class="form-label">Country</label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="To" class="form-label">To</label>
            <input asp-for="To" class="form-control" />
            <span asp-validation-for="To" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="DriverName" class="form-label">Driver Name</label>
            <input asp-for="DriverName" class="form-control" />
            <span asp-validation-for="DriverName" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ArrivalDate" class="form-label">Arrival Date</label>
            <input asp-for="ArrivalDate" type="date" class="form-control" />
            <span asp-validation-for="ArrivalDate" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="DepartureDate" class="form-label">Departure Date</label>
            <input asp-for="DepartureDate" type="date" class="form-control" />
            <span asp-validation-for="DepartureDate" class="text-danger"></span>
        </div>

        <div class="col-12 text-center mt-3">
            <button type="submit" class="btn btn-success px-4">➕ Add Client</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
