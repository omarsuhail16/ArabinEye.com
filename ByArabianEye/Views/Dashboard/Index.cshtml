@{
    ViewData["Title"] = "Dashboard";
    var role = ViewBag.Role as string ?? "client";
    var clients = ViewBag.ClientList as List<ByArabianEye.Models.Client>;
}

@if (role == "admin")
{
    <div class="container my-5">
        <h2 class="fw-bold mb-4 text-center">📊 لوحة تحكم الموظف | Admin Dashboard</h2>

        <div class="row g-4 text-center">
            <div class="col-md-4">
                <div class="card shadow border-0">
                    <div class="card-body">
                        <h5 class="card-title">📅 Number of reservations-عدد الحجوزات</h5>
                        <p class="display-6 fw-bold text-primary">@ViewBag.TotalBookings</p>
                        <a asp-controller="Bookings" asp-action="Index" class="btn btn-outline-primary btn-sm">عرض الحجوزات</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow border-0">
                    <div class="card-body">
                        <h5 class="card-title">🎁 Number of offers- عدد العروض</h5>
                        <p class="display-6 fw-bold text-danger">@ViewBag.TotalOffers</p>
                        <a asp-controller="Offers" asp-action="Index" class="btn btn-outline-danger btn-sm">عرض العروض</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow border-0">
                    <div class="card-body">
                        <h5 class="card-title">👥Number of clients - عدد العملاء</h5>
                        <p class="display-6 fw-bold text-success">@ViewBag.TotalClients</p>
                        <a href="#clientsTable" class="btn btn-outline-success btn-sm">عرض العملاء</a>
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-5" />

        <!-- ✅ جدول العملاء -->
        <div id="clientsTable">
            <h4 class="text-center mb-4">👥 Customer list-قائمة العملاء</h4>

            @if (clients != null && clients.Any())
            {
                <table class="table table-bordered table-hover">
                    <thead class="table-success">
                        <tr>
                            <th>#</th>
                            <th> user name-اسم المستخدم</th>
                            <th> Registration date-تاريخ التسجيل</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < clients.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@clients[i].Username</td>
                                <td>@clients[i].RegistrationDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted text-center">لا يوجد عملاء مسجلين حالياً.</p>
            }
        </div>
    </div>
}
else
{
    <div class="container my-5">
        <h2 class="fw-bold mb-4 text-center">🎁 العروض المتوفرة | Available Offers</h2>

        @if (ViewBag.AllOffers != null)
        {
            <ul class="list-group">
                @foreach (var offer in ViewBag.AllOffers as List<string>)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @offer
                        <a asp-controller="Bookings" asp-action="Create" class="btn btn-sm btn-success">احجز الآن</a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted text-center">لا توجد عروض متاحة حالياً.</p>
        }
    </div>
}
