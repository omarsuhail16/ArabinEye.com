@model List<ByArabianEye.Models.CountryOffer>
@{
    ViewData["Title"] = "Russia";
    var role = Context.Session.GetString("Role");
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@600&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Cairo', sans-serif;
        background: linear-gradient(to right, #141e30, #243b55);
        color: #fff;
        overflow-x: hidden;
    }

    .section {
        margin-bottom: 60px;
    }

        .section h3 {
            font-weight: bold;
            margin-bottom: 20px;
            color: #00d4ff;
        }

    .card {
        background-color: #1e2a38;
        color: #fff;
        border: none;
        border-radius: 15px;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 0 12px 30px rgba(0, 212, 255, 0.3);
        }

    .card-img-top {
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .carousel {
        max-width: 900px;
        margin: auto;
    }

    .carousel-item img {
        width: 100%;
        height: 450px;
        object-fit: cover;
        border-radius: 15px;
        animation: fadeIn 1.5s ease-in-out;
    }

    keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: scale(0.95);
    }

    to {
        opacity: 1;
        transform: scale(1);
    }

    }

    .highlight-box {
        background: #00d4ff;
        color: #000;
        padding: 30px;
        border-radius: 15px;
        text-align: center;
        animation: pulse 2s infinite;
    }

    keyframes pulse {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.03);
    }

    }

    .btn-custom {
        background-color: #00d4ff;
        border: none;
        color: #000;
        padding: 10px 25px;
        font-weight: bold;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #fff;
            color: #00d4ff;
            transform: scale(1.08) rotate(1deg);
        }
</style>

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="section text-center mb-5" data-aos="zoom-in" data-aos-duration="1200">
        <img src="/img/russia_red_square_resized.jpg" class="img-fluid rounded shadow mb-4 animate__animated animate__fadeInDown" style="max-height: 400px; object-fit: cover;">
        <h1 class="fw-bold text-info animate__animated animate__fadeInUp"> Russia</h1>
        <p class="fs-5 text-light animate__animated animate__fadeInUp animate__delay-1s">
            روسيا، أكبر دولة في العالم، تجمع بين روعة التاريخ الإمبراطوري وسحر الطبيعة المتنوعة. من قصور موسكو الفاخرة إلى قنوات سانت بطرسبرغ الحالمة، ومن جبال القوقاز إلى براري سيبيريا، تقدم روسيا تجربة سياحية لا تُنسى، حيث تتلاقى الفنون والثقافات والمعالم العالمية في بلد واحد.
            <br />Russia, the world’s largest country, offers a breathtaking journey through imperial palaces, dreamy canals, and vast natural wonders. From Moscow’s grandeur to St. Petersburg’s elegance, and the wild beauty of the Caucasus to the Siberian wilderness — Russia promises a travel experience like no other.
        </p>
    </div>


    <!-- Image Slider -->
    <div class="section" data-aos="fade-up" data-aos-delay="200">
        <div id="azerCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/img/slider_russia2_main.jpg.jpg" class="d-block w-100" alt="Baku" />
                </div>
                <div class="carousel-item">
                    <img src="~/img/russia.slide2.jpg" class="d-block w-100" alt="Nature" />
                </div>
                <div class="carousel-item">
                    <img src="~/img/russia.slide3.jpg" class="d-block w-100" alt="Culture" />
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#azerCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark rounded-circle"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#azerCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark rounded-circle"></span>
            </button>
        </div>
    </div>

    <!-- 🏙️ Cities Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🏙️ المدن السياحية | Famous Cities</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/moscow.jpg" class="card-img-top" alt="Moscow" />
                    <div class="card-body text-center">
                        <h5 class="card-title">موسكو | Moscow</h5>
                        <p>
                            العاصمة النابضة بالحياة، تحتضن الكرملين والساحة الحمراء والكاتدرائيات الرائعة.
                            <br />Russia’s vibrant capital, home to the Kremlin, Red Square, and stunning cathedrals.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/kazan.jpg" class="card-img-top" alt="Kazan" />
                    <div class="card-body text-center">
                        <h5 class="card-title">قازان | Kazan</h5>
                        <p>
                            مدينة تدمج بين الثقافة الإسلامية والتاريخ الروسي، مع معالم تترية فريدة.
                            <br />A city blending Islamic heritage and Russian history, featuring unique Tatar landmarks.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/saintpetersburg.jpg" class="card-img-top" alt="Saint Petersburg" />
                    <div class="card-body text-center">
                        <h5 class="card-title">سانت بطرسبرغ | Saint Petersburg</h5>
                        <p>
                            لؤلؤة الشمال، مشهورة بالقصور الإمبراطورية والمتاحف العالمية.
                            <br />The Pearl of the North, known for its imperial palaces and world-class museums.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🏨 Hotels Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🏨 أفضل الفنادق | Top Hotels</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/fourseasons.jpg" class="card-img-top" alt="Four Seasons Hotel" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Four Seasons Moscow</h5>
                        <a href="https://www.fourseasons.com/moscow/" target="_blank" class="btn btn-custom btn-sm">Visit Hotel</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/ritzmoscow.jpeg" class="card-img-top" alt="Ritz " />
                    <div class="card-body text-center">
                        <h5 class="card-title">The Ritz-Carlton Moscow</h5>
                        <a href="https://www.ritzcarlton.com/en/hotels/russia/moscow" target="_blank" class="btn btn-custom btn-sm">Visit Hotel</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/metropol.jpg" class="card-img-top" alt=" Metropol" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Hotel Metropol</h5>
                        <a href="https://metropol-moscow.ru" target="_blank" class="btn btn-custom btn-sm">Visit Hotel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🧳 Activities Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🧳 أنشطة لا تفوّت | Must-See Activities</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/rus.png" class="card-img-top" alt="Red Square" />
                    <div class="card-body text-center">
                        <h5 class="card-title">زيارة الساحة الحمراء | Red Square Visit</h5>
                        <p>
                            جولة لا تُنسى في الساحة الأشهر، بجانب الكرملين وكنيسة سانت باسيل.
                            <br />An unforgettable tour of Russia’s most iconic square, beside the Kremlin and St. Basil’s Cathedral.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Russian-allet.jpg" class="card-img-top" alt="Russian Ballet" />
                    <div class="card-body text-center">
                        <h5 class="card-title">حضور عرض باليه روسي | Russian Ballet</h5>
                        <p>
                            استمتع بأجمل عروض الباليه في مسارح موسكو أو سانت بطرسبرغ الأسطورية.
                            <br />Enjoy mesmerizing ballet performances in the legendary theaters of Moscow or Saint Petersburg.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Winter-Palace.jpg" class="card-img-top" alt="Winter Palace" />
                    <div class="card-body text-center">
                        <h5 class="card-title">زيارة قصر الشتاء | Winter Palace</h5>
                        <p>
                            اكتشف متحف الأرميتاج الفاخر داخل القصر الإمبراطوري التاريخي.
                            <br />Explore the magnificent Hermitage Museum inside the historic imperial Winter Palace.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🥘 Food Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🥘 أطباق مشهورة | Famous Dishes</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Borscht.jpg" class="card-img-top" alt="Borscht" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Borscht | بورشت</h5>
                        <p>
                            شوربة شهيرة بلونها الأحمر الغني، تحتوي على البنجر واللحم والخضار، وتُقدّم مع القشطة.
                            <br />A famous bright-red soup made with beetroot, meat, and vegetables, typically served with sour cream.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Beef-Stroganoff.jpg" class="card-img-top" alt="Beef Stroganoff" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Beef Stroganoff | بيف ستروغونوف</h5>
                        <p>
                            شرائح لحم طرية تُطهى بالكريمة والفطر، تُقدّم عادةً مع البطاطا المهروسة أو الأرز.
                            <br />Tender beef strips cooked in cream and mushrooms, often served with mashed potatoes or rice.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Pelmeni.webp" class="card-img-top" alt="Pelmeni" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Pelmeni | بيلميني</h5>
                        <p>
                            فطائر روسية محشوة باللحم، تُسلق وتُقدّم مع الزبدة أو القشطة – طبق تقليدي محبب.
                            <br />Russian meat-filled dumplings, boiled and served with butter or sour cream – a beloved traditional dish.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🎭 Culture Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🎭 ثقافة روسيا | Russian Culture</h3>
        <div class="text-center fs-5">
            <p>
                🇷🇺 <strong>اللغة الرسمية:</strong> الروسية | <strong>Official Language:</strong> Russian
            </p>
            <p>
                👘 <strong>اللباس التقليدي:</strong> السارافان، فستان نسائي طويل يُرتدى في المناسبات الشعبية.
                <br /><strong>Traditional Dress:</strong> Sarafan – a long traditional dress worn during folk festivals.
            </p>
            <p>
                🎵 <strong>الموسيقى:</strong> الموسيقى الكلاسيكية والباليه – جزء لا يتجزأ من التراث الروسي الفني.
                <br /><strong>Music:</strong> Classical music and ballet – essential pillars of Russian artistic heritage.
            </p>
        </div>
    </div>



    <div class="section" data-aos="fade-up">
        @if (role == "admin")
        {
            <div class="text-end mb-3">
                <a href="/CountryOffers/Manage" class="btn btn-warning fw-bold">
                    Offers management
                </a>
            </div>
        }

        <h3 class="text-center">عروض سياحية  | Offers</h3>
        <div class="row g-4">
            @foreach (var offer in Model.Where(o => o.Country == "Russia"))
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="@offer.ImageUrl" class="card-img-top" style="height: 300px; object-fit: cover;" alt="@offer.Title" />
                        <div class="card-body text-center">
                            <h5 class="card-title">@offer.Title</h5>
                            <p class="card-text">@offer.Description</p>
                            <p class="text-info fw-bold">$@offer.Price</p>
                            <a href="/Bookings/Create?country=Russia&hotel=@offer.Title" class="btn btn-custom mt-2">احجز الآن | Book Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Instagram and Contact -->
    <div class="section text-center" data-aos="fade-up">
        <a href="https://www.instagram.com/russia_by_arabian_eye" target="_blank" class="btn btn-danger btn-lg mb-3">
            📸 زورونا على إنستقرام | Visit us on Instagram
        </a><br />
        <a href="tel:+994999009001" class="btn btn-outline-light btn-lg">📞 تواصل معنا | Contact Us</a>
    </div>
</div>



<script>
    AOS.init();
</script>
