@model List<ByArabianEye.Models.CountryOffer>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Azerbaijan";
    var role = Context.Session.GetString("Role");
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@600&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />


<style>
    body {
        font-family: 'Cairo', sans-serif;
        background: linear-gradient(to right, #141e30, #243b55);
        color: #fff;
        overflow-x: hidden;
    }

    .section {
        margin-bottom: 60px;
    }

        .section h3 {
            font-weight: bold;
            margin-bottom: 20px;
            color: #00d4ff;
        }

    .card {
        background-color: #1e2a38;
        color: #fff;
        border: none;
        border-radius: 15px;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 0 12px 30px rgba(0, 212, 255, 0.3);
        }

    .card-img-top {
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .carousel {
        max-width: 900px;
        margin: auto;
    }

    .carousel-item img {
        width: 100%;
        height: 450px;
        object-fit: cover;
        border-radius: 15px;
        animation: fadeIn 1.5s ease-in-out;
    }

    keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: scale(0.95);
    }

    to {
        opacity: 1;
        transform: scale(1);
    }

    }

    .highlight-box {
        background: #00d4ff;
        color: #000;
        padding: 30px;
        border-radius: 15px;
        text-align: center;
        animation: pulse 2s infinite;
    }

    keyframes pulse {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.03);
    }

    }

    .btn-custom {
        background-color: #00d4ff;
        border: none;
        color: #000;
        padding: 10px 25px;
        font-weight: bold;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #fff;
            color: #00d4ff;
            transform: scale(1.08) rotate(1deg);
        }
</style>

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="section text-center mb-5" data-aos="zoom-in" data-aos-duration="1200">
        <img src="/img/azerbaijan_view_resized.jpg" class="img-fluid rounded shadow mb-4 animate__animated animate__fadeInDown" style="max-height: 400px; object-fit: cover;">
        <h1 class="fw-bold text-info animate__animated animate__fadeInUp">Azerbaijan</h1>
        <p class="fs-5 text-light animate__animated animate__fadeInUp animate__delay-1s">
            أذربيجان، لؤلؤة القوقاز، تمزج بين سحر الطبيعة، وأصالة الثقافة الإسلامية، وحداثة الحاضر في مشهد يخطف الأنفاس.
            <br />Azerbaijan, the Pearl of the Caucasus, blends natural beauty, the richness of Islamic culture, and modern elegance into a breathtaking experience.


        </p>
    </div>

    <!-- Image Slider -->
    <div class="section" data-aos="fade-up" data-aos-delay="200">
        <div id="azerCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/img/slide.aze.jpg" class="d-block w-100" alt="Baku" />
                </div>
                <div class="carousel-item">
                    <img src="~/img/azerbaijan2.jpg" class="d-block w-100" alt="Nature" />
                </div>
                <div class="carousel-item">
                    <img src="~/img/azerbaijan3.jpg" class="d-block w-100" alt="Culture" />
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#azerCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark rounded-circle"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#azerCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark rounded-circle"></span>
            </button>
        </div>
    </div>

    <!-- 🏙️ Cities Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🏙️ المدن السياحية | Famous Cities</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/baku.jpg" class="card-img-top" alt="Baku" />
                    <div class="card-body text-center">
                        <h5 class="card-title">باكو | Baku</h5>
                        <p>
                            عاصمة عصرية نابضة بالحياة، تتميز بالكورنيش البحري والأسواق الراقية.
                            <br />A vibrant modern capital, known for its seaside boulevard and upscale shopping.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/qapala.jpg" class="card-img-top" alt="Gabala" />
                    <div class="card-body text-center">
                        <h5 class="card-title">غابالا | Gabala</h5>
                        <p>
                            مدينة جبلية خلابة، مثالية لمحبي المغامرات والأنشطة في الهواء الطلق.
                            <br />A stunning mountain town perfect for outdoor adventures and nature lovers.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/quba.jpg" class="card-img-top" alt="Quba" />
                    <div class="card-body text-center">
                        <h5 class="card-title">قوبا | Quba</h5>
                        <p>
                            مدينة هادئة مليئة بالمناظر الطبيعية والحدائق – ملاذ للاسترخاء.
                            <br />A peaceful city filled with greenery and gardens — a true escape to relax.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🏨 Hotels Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🏨 أفضل الفنادق | Top Hotels</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/hilton.jpg" class="card-img-top" alt="Hilton Hotel" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Hilton Baku</h5>
                        <a href="https://www.hilton.com" target="_blank" class="btn btn-custom btn-sm">Visit Hotel</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/ritz.jpg" class="card-img-top" alt="Ritz Baku" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Ritz-Carlton Baku</h5>
                        <a href="https://www.ritzcarlton.com" target="_blank" class="btn btn-custom btn-sm">Visit Hotel</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/quba.palace.jpg" class="card-img-top" alt="Quba Palace" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Quba Palace</h5>
                        <a href="https://qubapalace.com/" target="_blank" class="btn btn-custom btn-sm">Visit Hotel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🧳 Activities Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🧳 أنشطة لا تفوّت | Must-See Activities</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/shopping.jpg" class="card-img-top" alt="Shopping in Baku" />
                    <div class="card-body text-center">
                        <h5 class="card-title">تسوق في باكو | Shopping in Baku</h5>
                        <p>
                            استمتع بتجربة تسوق فاخرة في مراكز حديثة وأسواق تقليدية.
                            <br />Enjoy a luxurious shopping experience in modern malls and traditional bazaars.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/hammam.jpg" class="card-img-top" alt="Azeri Hammam" />
                    <div class="card-body text-center">
                        <h5 class="card-title">الحمام الأذري | Azeri Hammam</h5>
                        <p>
                            استرخِ في أجواء تقليدية داخل حمام أذري قديم يعكس روح الضيافة.
                            <br />Relax in a traditional Azeri bathhouse that reflects the spirit of hospitality.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/caucasus.jpg" class="card-img-top" alt="Caucasus Mountains" />
                    <div class="card-body text-center">
                        <h5 class="card-title">جبال القوقاز | Caucasus Mountains</h5>
                        <p>
                            مشاهد طبيعية مدهشة وهواء نقي لعشاق الترحال والتصوير.
                            <br />Breathtaking landscapes and fresh mountain air for hikers and photographers.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🥘 Food Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🥘 أطباق مشهورة | Famous Dishes</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/dolma.png" class="card-img-top" alt="Dolma" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Dolma | دولما</h5>
                        <p>
                            ورق عنب محشو بالأرز واللحم والبهارات – طبق تراثي لذيذ.
                            <br />Vine leaves stuffed with rice, meat, and spices – a delicious traditional dish.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/plov.png" class="card-img-top" alt="Plov" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Plov | بلاو</h5>
                        <p>
                            طبق أرز فاخر مع الزعفران والمكسرات واللحم – وجبة أذربيجانية ملكية.
                            <br />A royal rice dish with saffron, nuts, and meat – rich in flavor and tradition.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/kebab.jpg" class="card-img-top" alt="Kebab" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Kebab | كباب</h5>
                        <p>
                            لحم مشوي على الفحم بتتبيلة أذربيجانية أصيلة – لا يُفوّت!
                            <br />Charcoal-grilled meat with authentic Azeri spices – an unforgettable taste!
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🎭 Culture Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🎭 ثقافة أذربيجان | Azerbaijani Culture</h3>
        <div class="text-center fs-5">
            <p>
                🇦🇿 <strong>اللغة الرسمية:</strong> الأذربيجانية | <strong>Official Language:</strong> Azerbaijani
            </p>
            <p>
                👘 <strong>اللباس التقليدي:</strong> الزي الأذري المطرز يعكس الأناقة والهوية الثقافية.
                <br /><strong>Traditional Dress:</strong> Embroidered national attire symbolizing elegance and cultural identity.
            </p>
            <p>
                🎵 <strong>الموسيقى:</strong> المقام الأذري وآلات شعبية كـ "تار" و"كمانتشا".
                <br /><strong>Music:</strong> Mugham and traditional instruments like the Tar and Kamancha.
            </p>
        </div>
    </div>


    <!-- عروض سياحية مضافة من النظام -->
    <div class="section" data-aos="fade-up">

        @if (role == "admin")
        {
            <div class="text-end mb-3">
                <a href="/CountryOffers/Manage" class="btn btn-warning fw-bold">
                    ⚙️ إدارة العروض السياحية
                </a>
            </div>
        }

        <h3 class="text-center">✨ عروض سياحية من قاعدة البيانات</h3>
        <div class="row g-4">
            @foreach (var offer in Model.Where(o => o.Country == "Azerbaijan"))
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="@offer.ImageUrl" class="card-img-top" style="height: 300px; object-fit: cover;" alt="@offer.Title" />
                        <div class="card-body text-center">
                            <h5 class="card-title">@offer.Title</h5>
                            <p class="card-text">@offer.Description</p>
                            <p class="text-info fw-bold">$@offer.Price</p>
                            <a href="/Bookings/Create?country=Azerbaijan&hotel=@offer.Title" class="btn btn-custom mt-2">احجز الآن | Book Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

   


    <!-- Instagram and Contact -->
    <div class="section text-center" data-aos="fade-up">
        <a href="https://www.instagram.com/azerbaijan_by_arabian_eye" target="_blank" class="btn btn-danger btn-lg mb-3">
            📸 زورونا على إنستقرام | Visit us on Instagram
        </a><br />
        <a href="tel:+994999009001" class="btn btn-outline-light btn-lg">📞 تواصل معنا | Contact Us</a>
    </div>
</div>



<script>
    AOS.init();
</script>
