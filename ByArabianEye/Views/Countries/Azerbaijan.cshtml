@{
    ViewData["Title"] = "Azerbaijan";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@600&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Cairo', sans-serif;
        background: linear-gradient(to right, #141e30, #243b55);
        color: #fff;
        overflow-x: hidden;
    }

    .section {
        margin-bottom: 60px;
    }

    .section h3 {
        font-weight: bold;
        margin-bottom: 20px;
        color: #00d4ff;
    }

    .card {
        background-color: #1e2a38;
        color: #fff;
        border: none;
        border-radius: 15px;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

    .card:hover {
        transform: scale(1.03);
        box-shadow: 0 12px 30px rgba(0, 212, 255, 0.3);
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .carousel {
        max-width: 900px;
        margin: auto;
    }

    .carousel-item img {
        width: 100%;
        height: 450px;
        object-fit: cover;
        border-radius: 15px;
        animation: fadeIn 1.5s ease-in-out;
    }

    keyframes fadeIn {
        from { opacity: 0; transform: scale(0.95); }
        to { opacity: 1; transform: scale(1); }
    }

    .highlight-box {
        background: #00d4ff;
        color: #000;
        padding: 30px;
        border-radius: 15px;
        text-align: center;
        animation: pulse 2s infinite;
    }

    keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.03); }
    }

    .btn-custom {
        background-color: #00d4ff;
        border: none;
        color: #000;
        padding: 10px 25px;
        font-weight: bold;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-custom:hover {
        background-color: #fff;
        color: #00d4ff;
        transform: scale(1.08) rotate(1deg);
    }
</style>

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="section text-center mb-5" data-aos="zoom-in" data-aos-duration="1200">
        <img src="/img/azerbaijan3.jpg" class="img-fluid rounded shadow mb-4 animate__animated animate__fadeInDown" style="max-height: 400px; object-fit: cover;">
        <h1 class="fw-bold text-info animate__animated animate__fadeInUp">🇦🇿 Azerbaijan</h1>
        <p class="fs-5 text-light animate__animated animate__fadeInUp animate__delay-1s">
            أذربيجان هي لؤلؤة القوقاز، تجمع بين الثقافة الإسلامية والحداثة مع طبيعة ساحرة.
            <br />Azerbaijan is the pearl of the Caucasus, blending Islamic culture with modernity and nature.
        </p>
    </div>

    <!-- Image Slider -->
    <div class="section" data-aos="fade-up" data-aos-delay="200">
        <div id="azerCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/img/azerbaijan1.jpg" class="d-block w-100" alt="Baku" />
                </div>
                <div class="carousel-item">
                    <img src="~/img/azerbaijan2.jpg" class="d-block w-100" alt="Nature" />
                </div>
                <div class="carousel-item">
                    <img src="~/img/azerbaijan3.jpg" class="d-block w-100" alt="Culture" />
                </div> 
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#azerCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark rounded-circle"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#azerCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark rounded-circle"></span>
            </button>
        </div>
    </div>

    <!-- Cities Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🏙️ المدن السياحية | Famous Cities</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/baku.jpg" class="card-img-top" alt="Baku" />
                    <div class="card-body text-center">
                        <h5 class="card-title">باكو | Baku</h5>
                        <p>العاصمة، مليئة بالحياة الليلية والممشى البحري العصري.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/qapala.jpg" class="card-img-top" alt="Gabala" />
                    <div class="card-body text-center">
                        <h5 class="card-title">غابالا | Gabala</h5>
                        <p>منطقة جبلية رائعة لعشاق المغامرة والمناظر الخلابة.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/quba.jpg" class="card-img-top" alt="Quba" />
                    <div class="card-body text-center">
                        <h5 class="card-title">قوبا | Quba</h5>
                        <p>مدينة خضراء هادئة، مثالية للاسترخاء والهدوء.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hotels Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🏨 أفضل الفنادق | Top Hotels</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/hilton.jpg" class="card-img-top" alt="Hilton Hotel" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Hilton Baku</h5>
                        <a href="https://www.hilton.com" target="_blank" class="btn btn-custom btn-sm">Visit Hotel</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/ritz.jpg" class="card-img-top" alt="Ritz Baku" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Ritz-Carlton Baku</h5>
                        <a href="https://www.ritzcarlton.com" target="_blank" class="btn btn-custom btn-sm">Visit Hotel</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/sheraton.jpg" class="card-img-top" alt="Sheraton Baku" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Sheraton Baku</h5>
                        <a href="https://www.marriott.com" target="_blank" class="btn btn-custom btn-sm">Visit Hotel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Special Offer -->
    <div class="section" data-aos="zoom-in">
        <h3 class="text-center">🎁 عرض مميز لأذربيجان | Special Offer</h3>
        <div class="row align-items-center">
            <div class="col-md-6 text-center mb-4 mb-md-0">
                <img src="~/img/Azerbaijan.offer.jpg.png" class="img-fluid rounded shadow" alt="Azerbaijan Offer" />
            </div>
            <div class="col-md-6">
                <div class="highlight-box">
                    <h4 class="mb-3">رحلة 5 أيام إلى باكو وقوبا</h4>
                    <p class="fs-5">يشمل الإقامة بفندق 5 نجوم، جولات يومية ومواصلات</p>
                    <a href="/Bookings/Create?country=Azerbaijan&hotel=Hilton Baku" class="btn btn-dark btn-lg">احجز الآن | Book Now</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Instagram and Contact -->
    <div class="section text-center" data-aos="fade-up">
        <a href="https://www.instagram.com/azerbaijan_by_arabian_eye" target="_blank" class="btn btn-danger btn-lg mb-3">
            📸 زورونا على إنستقرام | Visit us on Instagram
        </a><br />
        <a href="tel:+994999009001" class="btn btn-outline-light btn-lg">📞 تواصل معنا | Contact Us</a>
    </div>
</div>

<script>
    AOS.init();
</script>
