@{
    ViewData["Title"] = "Georgia";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@600&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Cairo', sans-serif;
        background: linear-gradient(to right, #141e30, #243b55);
        color: #fff;
        overflow-x: hidden;
    }

    .section {
        margin-bottom: 60px;
    }

        .section h3 {
            font-weight: bold;
            margin-bottom: 20px;
            color: #00d4ff;
        }

    .card {
        background-color: #1e2a38;
        color: #fff;
        border: none;
        border-radius: 15px;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 0 12px 30px rgba(0, 212, 255, 0.3);
        }

    .card-img-top {
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .carousel {
        max-width: 900px;
        margin: auto;
    }

    .carousel-item img {
        width: 100%;
        height: 450px;
        object-fit: cover;
        border-radius: 15px;
        animation: fadeIn 1.5s ease-in-out;
    }

    keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: scale(0.95);
    }

    to {
        opacity: 1;
        transform: scale(1);
    }

    }

    .highlight-box {
        background: #00d4ff;
        color: #000;
        padding: 30px;
        border-radius: 15px;
        text-align: center;
        animation: pulse 2s infinite;
    }

    keyframes pulse {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.03);
    }

    }

    .btn-custom {
        background-color: #00d4ff;
        border: none;
        color: #000;
        padding: 10px 25px;
        font-weight: bold;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #fff;
            color: #00d4ff;
            transform: scale(1.08) rotate(1deg);
        }
</style>

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="section text-center mb-5" data-aos="zoom-in" data-aos-duration="1200">
        <img src="/img/Georgia.header.jpg" class="img-fluid rounded shadow mb-4 animate__animated animate__fadeInDown" style="max-height: 400px; object-fit: cover;">
        <h1 class="fw-bold text-info animate__animated animate__fadeInUp"> Georgia</h1>
        <p class="fs-5 text-light animate__animated animate__fadeInUp animate__delay-1s">
            جورجيا هي لؤلؤة القوقاز، تجمع بين الثقافة الإسلامية والحداثة مع طبيعة ساحرة.
            <br />Georgia is the pearl of the Caucasus, blending Islamic culture with modernity and nature.
        </p>
    </div>

    <!-- Image Slider -->
    <div class="section" data-aos="fade-up" data-aos-delay="200">
        <div id="azerCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="carousel-item active">
                        <img src="~/img/georgia.slide1.webp class="d-block w-100" alt="Tbilisi" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/georgia.slide2.webp" class="d-block w-100" alt="Borjomi" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/georgia.slide3.jpg class="d-block w-100" alt="Batumi" />
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#georgiaCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon bg-dark rounded-circle"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#georgiaCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon bg-dark rounded-circle"></span>
                </button>

        </div>
    </div>

    <!-- Cities Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🏙️ المدن السياحية | Famous Cities</h3>
        <div class="row g-4">
            <div class="col-md-4">
                    <div class="card h-100">
                        <img src="~/img/tbilisi.jpg" class="card-img-top" alt="Tbilisi" />
                        <div class="card-body text-center">
                            <h5 class="card-title">تبليسي | Tbilisi</h5>
                            <p>
                                العاصمة، مزيج من الثقافة والتاريخ والحياة الليلية
                                <br />Capital full of culture, charm, and nightlife.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="~/img/borjomi.jpg" class="card-img-top" alt="Borjomi" />
                        <div class="card-body text-center">
                            <h5 class="card-title">بورجومي | Borjomi</h5>
                            <p>
                                مشهورة بالينابيع الطبيعية والطبيعة الجبلية
                                <br />Famous for natural springs and green mountains.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="~/img/batumi.jpg" class="card-img-top" alt="Batumi" />
                        <div class="card-body text-center">
                            <h5 class="card-title">باتومي | Batumi</h5>
                            <p>
                                مدينة ساحلية على البحر الأسود، حديثة وجميلة
                                <br />Black Sea resort city with beaches and modern style.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <!-- Hotels Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🏨 أفضل الفنادق | Top Hotels</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                        <img src="~/img/hilton_garden.jpg" class="card-img-top" alt="Hilton Garden Inn" />
                        <div class="card-body text-center">
                            <h5 class="card-title">Hilton Garden Inn</h5>
                            <p>
                                فندق حديث ومريح في قلب تبليسي
                                <br />Modern stay in central Tbilisi.
                            </p>
                            <a href="#" target="_blank" class="btn btn-outline-primary btn-sm">Visit Hotel</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="~/img/biltmore.jpg" class="card-img-top" alt="Biltmore Hotel" />
                        <div class="card-body text-center">
                            <h5 class="card-title">The Biltmore Hotel</h5>
                            <p>
                                فندق فاخر بإطلالات مميزة وخدمات راقية
                                <br />Luxury hotel with amazing views and services.
                            </p>
                            <a href="#" target="_blank" class="btn btn-outline-primary btn-sm">Visit Hotel</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="~/img/marriot.jpg" class="card-img-top" alt="Marriott" />
                        <div class="card-body text-center">
                            <h5 class="card-title">Marriott Tbilisi</h5>
                            <p>
                                رمز الأناقة والضيافة في جورجيا
                                <br />A symbol of elegance and Georgian hospitality.
                            </p>
                            <a href="#" target="_blank" class="btn btn-outline-primary btn-sm">Visit Hotel</a>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🧳 Activities Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🧳 أنشطة لا تفوّت | Must-See Activities</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                        <img src="~/img/Narikala_Fortress.jpg" class="card-img-top" alt="Shopping in Baku" />
                    <div class="card-body text-center">
                        <h5 class="card-title">قلعة ناريكالا | Narikala Fortress</h5>
                        <p>استمتع بإطلالة رائعة على مدينة تبليسي من القلعة التاريخية.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                        <img src="~/img/Sulfur_Baths.jpg" class="card-img-top" alt="Azeri Hammam" />
                    <div class="card-body text-center">
                        <h5 class="card-title">حمامات الكبريت | Sulfur Baths</h5>
                        <p>جرب الحمامات الكبريتية الشهيرة في قلب تبليسي.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                        <img src="~/img/Seeing-from-Gergeti.jpg" class="card-img-top" alt="Caucasus Mountains" />
                    <div class="card-body text-center">
                        <h5 class="card-title">كنيسة غيرغيتي | Gergeti Trinity Church</h5>
                        <p>موقع رائع في جبال القوقاز لمحبي الطبيعة والتاريخ.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🥘 Food Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🥘 أطباق مشهورة | Famous Dishes</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                        <img src="~/img/Khinkali.jpg" class="card-img-top" alt="Dolma" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Khinkali | خينكالي</h5>
                        <p>زلابية جورجية محشوة باللحم والبهارات – طعام شعبي مميز.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/khachapuri.jpg" class="card-img-top" alt="Plov" />
                    <div class="card-body text-center">
                            <h5 class="card-title">Khachapuri1.jpg | خاشابوري</h5>
                        <p>خبز محشو بالجبن – أحد أشهر الأطباق الجورجية.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                        <img src="~/img/Lobio.jpg" class="card-img-top" alt="Kebab" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Lobio | لوبيو</h5>
                        <p>أسياخ لحم مشوية لذيذة – لا بد أن تجربها في جورجيا.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🎭 Culture Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🎭 ثقافة جورجيا | Georgiai Culture</h3>
        <div class="text-center fs-5">
            <p>🇦🇿 اللغة الرسمية: الجورجياية | Official Language: Georgiai</p>
            <p>👘 اللباس التقليدي: الشوكا الجورجية | Traditional Dress: Georgian Chokha</p>
            <p>🎵 الموسيقى: الغناء الجورجي المتعدد الأصوات | Music: Georgian Polyphonic Singing</p>
        </div>
    </div>


    <!-- Special Offer -->
    <div class="section" data-aos="zoom-in">
        <h3 class="text-center">🎁 عرض مميز لجورجيا | Special Offer</h3>
        <div class="row align-items-center">
            <div class="col-md-6 text-center mb-4 mb-md-0">
                    <img src="~/img/georgia_offer.jpg.png" class="img-fluid rounded shadow" alt="Georgia Offer" />
            </div>
            <div class="col-md-6">
                <div class="highlight-box">
                    <h4 class="mb-3">رحلة 6 أيام إلى تبليسي وباتومي</h4>
                    <p class="fs-5">الإقامة بفنادق فاخرة + رحلات سياحية يومية</p>
                    <a href="/Bookings/Create?country=Georgia&hotel=Rooms Hotel Tbilisi" class="btn btn-dark btn-lg">احجز الآن | Book Now</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Instagram and Contact -->
    <div class="section text-center" data-aos="fade-up">
        <a href="https://www.instagram.com/georgia_by_arabian_eye" target="_blank" class="btn btn-danger btn-lg mb-3">
            📸 زورونا على إنستقرام | Visit us on Instagram
        </a><br />
        <a href="tel:+994999009001" class="btn btn-outline-light btn-lg">📞 تواصل معنا | Contact Us</a>
    </div>
</div>



