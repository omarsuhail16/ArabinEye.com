@model List<ByArabianEye.Models.CountryOffer>
@{
    ViewData["Title"] = "Georgia";
    var role = Context.Session.GetString("Role");
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@600&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Cairo', sans-serif;
        background: linear-gradient(to right, #141e30, #243b55);
        color: #fff;
        overflow-x: hidden;
    }

    .section {
        margin-bottom: 60px;
    }

        .section h3 {
            font-weight: bold;
            margin-bottom: 20px;
            color: #00d4ff;
        }

    .card {
        background-color: #1e2a38;
        color: #fff;
        border: none;
        border-radius: 15px;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 0 12px 30px rgba(0, 212, 255, 0.3);
        }

    .card-img-top {
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .carousel {
        max-width: 900px;
        margin: auto;
    }

    .carousel-item img {
        width: 100%;
        height: 450px;
        object-fit: cover;
        border-radius: 15px;
        animation: fadeIn 1.5s ease-in-out;
    }

    keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: scale(0.95);
    }

    to {
        opacity: 1;
        transform: scale(1);
    }

    }

    .highlight-box {
        background: #00d4ff;
        color: #000;
        padding: 30px;
        border-radius: 15px;
        text-align: center;
        animation: pulse 2s infinite;
    }

    keyframes pulse {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.03);
    }

    }

    .btn-custom {
        background-color: #00d4ff;
        border: none;
        color: #000;
        padding: 10px 25px;
        font-weight: bold;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #fff;
            color: #00d4ff;
            transform: scale(1.08) rotate(1deg);
        }
</style>

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="section text-center mb-5" data-aos="zoom-in" data-aos-duration="1200">
        <img src="/img/Georgia.header.jpg" class="img-fluid rounded shadow mb-4 animate__animated animate__fadeInDown" style="max-height: 400px; object-fit: cover;">
        <h1 class="fw-bold text-info animate__animated animate__fadeInUp"> Georgia</h1>
        <p class="fs-5 text-light animate__animated animate__fadeInUp animate__delay-1s">
            جورجيا، بلد الجبال الشامخة والطبيعة الخلابة، تجمع بين التاريخ العريق والضيافة الدافئة في قلب القوقاز.
            <br />Georgia, a land of majestic mountains and breathtaking nature, blends ancient history with warm hospitality in the heart of the Caucasus.
        </p>
    </div>


    <!-- Image Slider -->
    <div class="section" data-aos="fade-up" data-aos-delay="200">
        <div id="georgiaCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/img/georgia.slide1.webp" class="d-block w-100" alt="Tbilisi" />
                </div>
                <div class="carousel-item">
                    <img src="~/img/georgia.slide2.webp" class="d-block w-100" alt="Borjomi" />
                </div>
                <div class="carousel-item">
                    <img src="~/img/georgia.slide3.jpg" class="d-block w-100" alt="Batumi" />
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#georgiaCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark rounded-circle"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#georgiaCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark rounded-circle"></span>
            </button>
        </div>
    </div>


    <!-- 🏙️ Cities Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🏙️ المدن السياحية | Famous Cities</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/tbilisi.jpg" class="card-img-top" alt="Tbilisi" />
                    <div class="card-body text-center">
                        <h5 class="card-title">تبليسي | Tbilisi</h5>
                        <p>
                            العاصمة النابضة بالحياة، تجمع بين السحر التاريخي والمقاهي والمشهد الليلي.
                            <br />The lively capital blending historic charm, cafes, and vibrant nightlife.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/borjomi.jpg" class="card-img-top" alt="Borjomi" />
                    <div class="card-body text-center">
                        <h5 class="card-title">بورجومي | Borjomi</h5>
                        <p>
                            منتجع جبلي شهير بينابيع المياه المعدنية والطبيعة الخضراء.
                            <br />A famous mountain resort known for mineral springs and lush nature.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/batumi.jpg" class="card-img-top" alt="Batumi" />
                    <div class="card-body text-center">
                        <h5 class="card-title">باتومي | Batumi</h5>
                        <p>
                            مدينة ساحلية عصرية على البحر الأسود، تمتاز بالشواطئ والمعالم الحديثة.
                            <br />A modern Black Sea city known for beaches and futuristic architecture.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🏨 Hotels Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🏨 أفضل الفنادق | Top Hotels</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/hilton_garden.jpg" class="card-img-top" alt="Hilton Garden Inn" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Hilton Garden Inn</h5>
                        <p>
                            إقامة عصرية ومريحة في قلب العاصمة تبليسي.
                            <br />Modern and comfortable stay in the heart of Tbilisi.
                        </p>
                        <a href="#" target="_blank" class="btn btn-outline-primary btn-sm">Visit Hotel</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/biltmore.jpg" class="card-img-top" alt="Biltmore Hotel" />
                    <div class="card-body text-center">
                        <h5 class="card-title">The Biltmore Hotel</h5>
                        <p>
                            فندق فاخر بإطلالات بانورامية وخدمات من فئة الخمس نجوم.
                            <br />A luxury hotel offering panoramic views and 5-star services.
                        </p>
                        <a href="#" target="_blank" class="btn btn-outline-primary btn-sm">Visit Hotel</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/marriot.jpg" class="card-img-top" alt="Marriott Tbilisi" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Marriott Tbilisi</h5>
                        <p>
                            رمز الفخامة والضيافة الجورجية في وسط المدينة.
                            <br />A symbol of elegance and Georgian hospitality in the city center.
                        </p>
                        <a href="#" target="_blank" class="btn btn-outline-primary btn-sm">Visit Hotel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🧳 Activities Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🧳 أنشطة لا تفوّت | Must-See Activities</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Narikala_Fortress.jpg" class="card-img-top" alt="Narikala Fortress" />
                    <div class="card-body text-center">
                        <h5 class="card-title">قلعة ناريكالا | Narikala Fortress</h5>
                        <p>
                            استمتع بإطلالات بانورامية على تبليسي من القلعة التاريخية.
                            <br />Enjoy panoramic views of Tbilisi from this ancient fortress.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Sulfur_Baths.jpg" class="card-img-top" alt="Sulfur Baths" />
                    <div class="card-body text-center">
                        <h5 class="card-title">حمامات الكبريت | Sulfur Baths</h5>
                        <p>
                            تجربة استرخاء فريدة في الحمامات الكبريتية التاريخية.
                            <br />A unique relaxation experience in Tbilisi’s historic sulfur baths.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Seeing-from-Gergeti.jpg" class="card-img-top" alt="Gergeti Church" />
                    <div class="card-body text-center">
                        <h5 class="card-title">كنيسة غيرغيتي | Gergeti Trinity Church</h5>
                        <p>
                            واحدة من أجمل المعالم الجبلية في جورجيا، وسط جبال القوقاز.
                            <br />One of Georgia’s most scenic landmarks, nestled in the Caucasus Mountains.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🥘 Food Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🥘 أطباق مشهورة | Famous Dishes</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Khinkali.jpg" class="card-img-top" alt="Khinkali" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Khinkali | خينكالي</h5>
                        <p>
                            زلابية محشوة باللحم والتوابل – من أشهر الأكلات الجورجية.
                            <br />Dumplings filled with meat and spices – a Georgian street food favorite.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Khachapuri1.jpg" class="card-img-top" alt="Khachapuri" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Khachapuri | خاشابوري</h5>
                        <p>
                            خبز مخبوز بالجبنة والبيض – طبق لا يُفوت لعشاق الجبن.
                            <br />Cheese-filled bread topped with egg – a must-try for cheese lovers.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Lobio.jpg" class="card-img-top" alt="Lobio" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Lobio | لوبيو</h5>
                        <p>
                            طبق نباتي شهي من الفاصوليا الحمراء مطهو مع الثوم والتوابل.
                            <br />A hearty vegetarian dish of red beans cooked with garlic and spices.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🎭 Culture Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🎭 ثقافة جورجيا | Georgian Culture</h3>
        <div class="text-center fs-5">
            <p>
                🇬🇪 <strong>اللغة الرسمية:</strong> الجورجية | <strong>Official Language:</strong> Georgian
            </p>
            <p>
                👘 <strong>اللباس التقليدي:</strong> الشوكا – زي رجالي تقليدي يرمز للفخر الوطني.
                <br /><strong>Traditional Dress:</strong> Chokha – a traditional men’s garment symbolizing national pride.
            </p>
            <p>
                🎵 <strong>الموسيقى:</strong> الغناء الجورجي المتعدد الأصوات – تراث فريد مسجل في اليونسكو.
                <br /><strong>Music:</strong> Georgian polyphonic singing – a UNESCO-recognized cultural heritage.
            </p>
        </div>
    </div>



    <div class="section" data-aos="fade-up">
        @if (role == "admin")
        {
            <div class="text-end mb-3">
                <a href="/CountryOffers/Manage" class="btn btn-warning fw-bold">
                    Offers management
                </a>
            </div>
        }

        <h3 class="text-center"> عروض سياحية  | Offers</h3>
        <div class="row g-4">
            @foreach (var offer in Model.Where(o => o.Country == "Georgia"))
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="@offer.ImageUrl" class="card-img-top" style="height: 300px; object-fit: cover;" alt="@offer.Title" />
                        <div class="card-body text-center">
                            <h5 class="card-title">@offer.Title</h5>
                            <p class="card-text">@offer.Description</p>
                            <p class="text-info fw-bold">$@offer.Price</p>
                            <a href="/Bookings/Create?country=Georgia&hotel=@offer.Title" class="btn btn-custom mt-2">احجز الآن | Book Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Instagram and Contact -->
    <div class="section text-center" data-aos="fade-up">
        <a href="https://www.instagram.com/georgia_by_arabian_eye" target="_blank" class="btn btn-danger btn-lg mb-3">
            📸 زورونا على إنستقرام | Visit us on Instagram
        </a><br />
        <a href="tel:+994999009001" class="btn btn-outline-light btn-lg">📞 تواصل معنا | Contact Us</a>
    </div>
</div>



<script>
    AOS.init();
</script>
