@model List<ByArabianEye.Models.CountryOffer>

@{
    ViewData["Title"] = "Albania";
    Layout = "_Layout";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@600&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />




<style>
    body {
        font-family: 'Cairo', sans-serif;
        background: linear-gradient(to right, #141e30, #243b55);
        color: #fff;
        overflow-x: hidden;
    }

    .section {
        margin-bottom: 60px;
    }

        .section h3 {
            font-weight: bold;
            margin-bottom: 20px;
            color: #00d4ff;
        }

    .card {
        background-color: #1e2a38;
        color: #fff;
        border: none;
        border-radius: 15px;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 0 12px 30px rgba(0, 212, 255, 0.3);
        }

    .card-img-top {
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .carousel {
        max-width: 900px;
        margin: auto;
    }

    .carousel-item img {
        width: 100%;
        height: 450px;
        object-fit: cover;
        border-radius: 15px;
        animation: fadeIn 1.5s ease-in-out;
    }

    keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: scale(0.95);
    }

    to {
        opacity: 1;
        transform: scale(1);
    }

    }

    .highlight-box {
        background: #00d4ff;
        color: #000;
        padding: 30px;
        border-radius: 15px;
        text-align: center;
        animation: pulse 2s infinite;
    }

    keyframes pulse {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.03);
    }

    }

    .btn-custom {
        background-color: #00d4ff;
        border: none;
        color: #000;
        padding: 10px 25px;
        font-weight: bold;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #fff;
            color: #00d4ff;
            transform: scale(1.08) rotate(1deg);
        }
</style>

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="section text-center mb-5" data-aos="zoom-in" data-aos-duration="1200">
        <img src="/img/albania_header_resized.jpg" class="img-fluid rounded shadow mb-4 animate__animated animate__fadeInDown" style="max-height: 400px; object-fit: cover;">
        <h1 class="fw-bold text-info animate__animated animate__fadeInUp"> Albania</h1>
        <p class="fs-5 text-light animate__animated animate__fadeInUp animate__delay-1s">
            ألبانيا، جوهرة البلقان، تمتاز بسواحلها الخلابة، ومدنها التاريخية، وثقافتها الغنية التي تمزج بين الشرق والغرب.
            <br />Albania, the Jewel of the Balkans, boasts stunning coastlines, historic cities, and a rich culture blending East and West.
        </p>
    </div>


    <!-- Image Slider -->
    <div class="section" data-aos="fade-up" data-aos-delay="200">
        <div id="azerCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/img/albaina.slide1.webp" class="d-block w-100" alt="Baku" />
                </div>
                <div class="carousel-item">
                    <img src="~/img/albaina.slide2.webp" class="d-block w-100" alt="Nature" />
                </div>
                <div class="carousel-item">
                    <img src="~/img/albaina.slide3.webp" class="d-block w-100" alt="Culture" />
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#azerCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark rounded-circle"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#azerCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark rounded-circle"></span>
            </button>
        </div>
    </div>
    <!-- 🏙️ Cities Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🏙️ المدن السياحية | Famous Cities</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/tirana.jpg" class="card-img-top" alt="Tirana" />
                    <div class="card-body text-center">
                        <h5 class="card-title">تيرانا | Tirana</h5>
                        <p>
                            العاصمة النابضة بالحياة التي تمزج بين الحداثة والتاريخ والروح الشبابية.
                            <br />A lively capital blending modernity, history, and youthful spirit.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/saranda.jpg" class="card-img-top" alt="Saranda" />
                    <div class="card-body text-center">
                        <h5 class="card-title">ساراندا | Saranda</h5>
                        <p>
                            مدينة ساحلية خلابة بمياهها الفيروزية ومنتجعاتها الهادئة.
                            <br />A stunning coastal town with turquoise waters and peaceful resorts.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/berat.jpg" class="card-img-top" alt="Berat" />
                    <div class="card-body text-center">
                        <h5 class="card-title">بيرات | Berat</h5>
                        <p>
                            مدينة تاريخية تُعرف بمدينة النوافذ الألف، غنية بالثقافة والتقاليد.
                            <br />A historic town known as “The City of a Thousand Windows”, rich in culture and tradition.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🏨 Hotels Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🏨 أفضل الفنادق | Top Hotels</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/plaza-tirana.jpg" class="card-img-top" alt="Plaza Hotel Tirana" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Plaza Hotel Tirana</h5>
                        <a href="#" target="_blank" class="btn btn-custom btn-sm">Visit Hotel</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/bougainville.jpg" class="card-img-top" alt="Bougainville Bay Hotel" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Bougainville Bay Hotel</h5>
                        <a href="#" target="_blank" class="btn btn-custom btn-sm">Visit Hotel</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/mangalemi.jpg" class="card-img-top" alt="Hotel Mangalemi" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Hotel Mangalemi</h5>
                        <a href="#" target="_blank" class="btn btn-custom btn-sm">Visit Hotel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🧳 Activities Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🧳 أنشطة لا تفوّت | Must-See Activities</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Butrint-Ruins.jpg" class="card-img-top" alt="Butrint Ruins" />
                    <div class="card-body text-center">
                        <h5 class="card-title">زيارة آثار بوترينت | Butrint Ruins</h5>
                        <p>
                            اكتشف موقعًا أثريًا مذهلاً يعود للحضارة اليونانية والرومانية، مسجّل لدى اليونسكو.
                            <br />Explore this UNESCO World Heritage archaeological site of Greek and Roman history.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Beach-Relaxation.jpeg" class="card-img-top" alt="Beach Relaxation" />
                    <div class="card-body text-center">
                        <h5 class="card-title">الاسترخاء على الشاطئ | Beach Relaxation</h5>
                        <p>
                            تمتع بأجواء هادئة وشمس دافئة على شواطئ ألبانيا الفيروزية.
                            <br />Relax in the serene atmosphere and warm sun of Albania’s turquoise beaches.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Berat-Castle.png" class="card-img-top" alt="Berat Castle" />
                    <div class="card-body text-center">
                        <h5 class="card-title">زيارة قلعة بيرات | Berat Castle</h5>
                        <p>
                            استمتع بإطلالة بانورامية على المدينة من أقدم قلاع البلقان.
                            <br />Enjoy a panoramic view from one of the oldest castles in the Balkans.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🥘 Food Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🥘 أطباق مشهورة | Famous Dishes</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Tavë-Kosi.jpg" class="card-img-top" alt="Tavë Kosi" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Tavë Kosi | تافِ كوسي</h5>
                        <p>
                            طبق تقليدي مكون من لحم الضأن باللبن والبيض – رمز المطبخ الألباني.
                            <br />Traditional dish of lamb baked with yogurt and eggs – a symbol of Albanian cuisine.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Byrek.jpg" class="card-img-top" alt="Byrek" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Byrek | بيريك</h5>
                        <p>
                            فطائر مقرمشة محشوة بالجبن أو السبانخ – وجبة شهية ومحبوبة.
                            <br />Crispy pies filled with cheese or spinach – a popular and tasty snack.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/img/Fërgesë.jpg" class="card-img-top" alt="Fërgesë" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Fërgesë | فِرغِسة</h5>
                        <p>
                            طبق غني بالخضروات والجبنة والطماطم، يُطهى في الفخار – تجربة لا تُنسى.
                            <br />A rich dish of vegetables, cheese, and tomatoes cooked in clay pots – an unforgettable taste.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🎭 Culture Section -->
    <div class="section" data-aos="fade-up">
        <h3 class="text-center">🎭 ثقافة ألبانيا | Albanian Culture</h3>
        <div class="text-center fs-5">
            <p>
                🇦🇱 <strong>اللغة الرسمية:</strong> الألبانية | <strong>Official Language:</strong> Albanian
            </p>
            <p>
                👘 <strong>اللباس التقليدي:</strong> الأزياء الألبانية المطرزة ترمز إلى الأصالة والفخر الشعبي.
                <br /><strong>Traditional Dress:</strong> Embroidered Albanian folk dresses symbolize pride and heritage.
            </p>
            <p>
                🎵 <strong>الموسيقى:</strong> الفولكلور الألباني وأغاني البلقان – مزيج من الإيقاعات الجبلية والعاطفة.
                <br /><strong>Music:</strong> Albanian folk and Balkan music – a blend of mountain rhythms and emotion.
            </p>
        </div>
    </div>


    @{
        var role = Context.Session.GetString("Role");
    }

    <div class="section" data-aos="fade-up">
        @if (role == "admin")
        {
            <div class="text-end mb-3">
                <a href="/CountryOffers/Manage" class="btn btn-success fw-bold">
                    ⚙️ إدارة عروض ألبانيا
                </a>
            </div>
        }

        <h3 class="text-center">🎉 عروض سياحية من قاعدة البيانات | Offers</h3>
        <div class="row g-4">
            @foreach (var offer in Model.Where(o => o.Country == "Albania"))
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="@offer.ImageUrl" class="card-img-top" style="height: 300px; object-fit: cover;" alt="@offer.Title" />
                        <div class="card-body text-center">
                            <h5 class="card-title">@offer.Title</h5>
                            <p class="card-text">@offer.Description</p>
                            <p class="text-info fw-bold">$@offer.Price</p>
                            <a href="/Bookings/Create?country=Albania&hotel=@offer.Title" class="btn btn-custom mt-2">احجز الآن | Book Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>


    <!-- Instagram and Contact -->
    <div class="section text-center" data-aos="fade-up">
        <a href="https://www.instagram.com/albania_by_arabian_eye" target="_blank" class="btn btn-danger btn-lg mb-3">
            📸 زورونا على إنستقرام | Visit us on Instagram
        </a><br />
        <a href="tel:+994999009001" class="btn btn-outline-light btn-lg">📞 تواصل معنا | Contact Us</a>
    </div>
</div>



<script>
    AOS.init();
</script>
