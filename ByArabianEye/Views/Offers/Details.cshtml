@{
    ViewData["Title"] = "Offer Details";
}

<div class="container my-5">
    <h2 class="text-center mb-4 fw-bold">🎁 تفاصيل العرض | Offer Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">Luxury Hotel Package</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">3 nights in a 5-star hotel + airport pickup</dd>

                <dt class="col-sm-3">Country</dt>
                <dd class="col-sm-9">Azerbaijan</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">Hotel</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">$299</dd>

                <dt class="col-sm-3">Expires</dt>
                <dd class="col-sm-9">2025-07-31</dd>
            </dl>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-outline-primary">⬅️ Back to Offers</a>
            </div>
        </div>
    </div>
</div>
