@{
    ViewData["Title"] = "Our Services";
}
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@600&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    body {
        font-family: 'Cairo', sans-serif;
        background-color: #f4f6f9;
        color: #333;
    }

    .hero-header {
        background: url('/img/services_banner.jpg') no-repeat center center;
        background-size: cover;
        height: 350px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
    }

        .hero-header h1 {
            font-size: 2.8rem;
            background-color: rgba(0,0,0,0.6);
            padding: 20px 30px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        }

    .section-title {
        font-weight: bold;
        color: #2c3e50;
        margin: 40px 0 20px;
        text-align: center;
        font-size: 2rem;
    }

    .filters {
        text-align: center;
        margin-bottom: 30px;
    }

        .filters button {
            margin: 0 10px;
            border: none;
            padding: 8px 16px;
            border-radius: 20px;
            background-color: #2c3e50;
            color: white;
            cursor: pointer;
        }

            .filters button.active, .filters button:hover {
                background-color: #007bff;
            }

    .service-card {
        border: none;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        transition: 0.3s ease-in-out;
    }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0,0,0,0.15);
        }

        .service-card img {
            height: 250px;
            object-fit: cover;
        }

    .card-body h5 {
        font-weight: bold;
    }

    .btn-book {
        margin-top: 10px;
    }

    .rating {
        color: #ffc107;
        font-size: 0.95rem;
    }
</style>

<div class="hero-header">
    <h1>🌟 Explore Our Premium Services</h1>
</div>

<div class="container">
    <h2 class="section-title">خدماتنا المميزة | Our Services</h2>

    <div class="filters">
        <button class="filter-btn active" data-category="all">الكل</button>
        <button class="filter-btn" data-category="cars">🚗 سيارات</button>
        <button class="filter-btn" data-category="tours">🧳 رحلات</button>
        <button class="filter-btn" data-category="transfers">✈️ استقبال</button>
        <button class="filter-btn" data-category="support">☎️ دعم</button>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <div class="col service-item" data-category="tours" data-aos="fade-up">
            <div class="card service-card">
                <img src="~/img/service_travel.png" class="card-img-top" alt="Travel Packages">
                <div class="card-body text-center">
                    <h5>🧳 رحلات سياحية</h5>
                    <p class="text-muted small">Travel Packages</p>
                    <p>Custom adventures for unforgettable memories.</p>
                    
                </div>
            </div>
        </div>

        <div class="col service-item" data-category="cars" data-aos="fade-up">
            <div class="card service-card">
                <img src="~/img/luxury_car.jpg" class="card-img-top" alt="Luxury Car">
                <div class="card-body text-center">
                    <h5>🚗 سيارة فخمة</h5>
                    <p class="text-muted small">Luxury Car</p>
                    <p>Enjoy premium rides with professional drivers.</p>
                
                </div>
            </div>
        </div>

        <div class="col service-item" data-category="cars" data-aos="fade-up">
            <div class="card service-card">
                <img src="~/img/family_car.jpg" class="card-img-top" alt="Family Car">
                <div class="card-body text-center">
                    <h5>🚙 سيارة عائلية</h5>
                    <p class="text-muted small">Family Car</p>
                    <p>Spacious cars for family comfort.</p>
                   
                </div>
            </div>
        </div>

        <div class="col service-item" data-category="tours" data-aos="fade-up">
            <div class="card service-card">
                <img src="~/img/group_tour1.jpg" class="card-img-top" alt="Group Tours">
                <div class="card-body text-center">
                    <h5>👥 جولات جماعية</h5>
                    <p class="text-muted small">Group Tours</p>
                    <p>Explore in groups with experienced guides.</p>
                  
                </div>
            </div>
        </div>

        <div class="col service-item" data-category="transfers" data-aos="fade-up">
            <div class="card service-card">
                <img src="~/img/airport_transfer.png" class="card-img-top" alt="Airport Transfers">
                <div class="card-body text-center">
                    <h5>✈️ استقبال وتوديع</h5>
                    <p class="text-muted small">Airport Transfers</p>
                    <p>Comfortable and on-time airport pickups.</p>
                    
                </div>
            </div>
        </div>

        <div class="col service-item" data-category="support" data-aos="fade-up">
            <div class="card service-card">
                <img src="~/img/support.png" class="card-img-top" alt="24/7 Support">
                <div class="card-body text-center">
                    <h5>☎️ دعم واستفسارات</h5>
                    <p class="text-muted small">24/7 Support</p>
                    <p>Dedicated support team around the clock.</p>
                 
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({ duration: 1000, once: true });

    const filterButtons = document.querySelectorAll('.filter-btn');
    const serviceItems = document.querySelectorAll('.service-item');

    filterButtons.forEach(btn => {
        btn.addEventListener('click', () => {
            document.querySelector('.filter-btn.active').classList.remove('active');
            btn.classList.add('active');

            const category = btn.getAttribute('data-category');
            serviceItems.forEach(item => {
                const itemCat = item.getAttribute('data-category');
                if (category === 'all' || itemCat === category) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        });
    });
</script>
