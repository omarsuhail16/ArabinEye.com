<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script>
    var map = L.map('map', {
        center: [41.8, 50.0],
        zoom: 4.2,
        maxBounds: [[30, 10], [60, 90]],
        scrollWheelZoom: false
    });

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '© OpenStreetMap'
    }).addTo(map);

    var countries = [
        { name: "Azerbaijan", coords: [40.4093, 49.8671], flag: "/img/azerbaijan.jpg.png", link: "/Countries/Azerbaijan" },
        { name: "Georgia", coords: [41.7151, 44.8271], flag: "/img/georgia.jpg.png", link: "/Countries/Georgia" },
        { name: "Albania", coords: [41.3275, 19.8189], flag: "/img/albania.jpg.png.png", link: "/Countries/Albania" },
        { name: "Kazakhstan", coords: [51.1605, 71.4704], flag: "/img/kazakhstan.jpg.png", link: "/Countries/Kazakhstan" },
        { name: "Russia", coords: [55.7558, 37.6173], flag: "/img/russia.jpg.png", link: "/Countries/Russia" },
        { name: "Uzbekistan", coords: [41.3775, 64.5853], flag: "/img/uzbekistan.jpg.png", link: "/Countries/Uzbekistan" }
    ];

    countries.forEach(c => {
        var popupHtml = `<img src="${c.flag}" alt="${c.name} Flag" /><h6 class="mt-1">${c.name}</h6><a href="${c.link}" class="btn btn-sm btn-primary">View Page</a>`;
        L.marker(c.coords).addTo(map).bindPopup(popupHtml);
    });

    const texts = ["🌍 Explore the world with us!", "✨ Luxury travel experiences", "⏳ Over 10 years of trust", "💼 Professional tourism services", "📍 Gulf-based travel expertise"];
    let count = 0, index = 0, currentText = '', letter = '';
    (function type() {
        if (count === texts.length) count = 0;
        currentText = texts[count];
        letter = currentText.slice(0, ++index);
        document.querySelector(".typewriter").textContent = letter;
        if (letter.length === currentText.length) { count++; index = 0; setTimeout(type, 2000); }
        else { setTimeout(type, 80); }
    })();
</script>
